@model WebKursovaya.Models.Посещения
@{
    ViewData["Title"] = "Форма записи";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Заявление на посещение организации</title>
    <style>
        /* Стили для улучшения внешнего вида формы */
        
        .form-container {
            text-align: center; /* Center the content within the container */
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 50px;
        }

        .form-container h2 {
                margin-bottom: 20px;
        }

        .form-group {
            text-align: left; 
            margin-bottom: 5px;
        }

        .form-control {
            position: relative;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }

        
        input[type="date"] {
            width: calc(100% - 18px); /* Ширина поля ввода */
        }


        label {
            display: block;
            font-weight: bold;
            margin-bottom: 20px;
            margin-left: 15px;
        }

        input[type="text"],
        input[type="datetime-local"] {
            width: calc(100% - 18px);
            padding: 8px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        input[type="submit"] {
            width: 100%;
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Заявление на посещение</h2>
        <form asp-controller="Form" asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="Фамилия"></label>
                <input asp-for="Фамилия" class="form-control" />
                <span asp-validation-for="Фамилия" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Имя"></label>
                <input asp-for="Имя" class="form-control" />
                <span asp-validation-for="Имя" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Отчество"></label>
                <input asp-for="Отчество" class="form-control" />
                <span asp-validation-for="Отчество" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Дата_рождения"></label>
                <input asp-for="Дата_рождения" class="form-control" type="date" required />
                    <span asp-validation-for="Дата_рождения" class="text-danger"></span>
                </div>

            <div class="form-group">
                <label asp-for="Дата_посещения"></label>
                <input asp-for="Дата_посещения" class="form-control" type="datetime-local" required>
                <span asp-validation-for="Дата_посещения" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Отправить заявление">
            </div>
        </form>
    </div>
</body>
</html>


