@model WebKursovaya.Models.Категории_ТС

@{
    ViewData["Title"] = "Редактирование записи";
}

<h1>Редактировать</h1>

<h4>категорию ТС</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Код_категории_ТС" />
            <div class="form-group">
                <label asp-for="Наименование_категории_ТС" class="control-label"></label>
                <input asp-for="Наименование_категории_ТС" class="form-control" />
                <span asp-validation-for="Наименование_категории_ТС" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
