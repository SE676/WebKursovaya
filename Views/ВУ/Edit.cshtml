@model WebKursovaya.Models.ВУ

@{
    ViewData["Title"] = "Редактирование записи";
}

<h1>Редактировать</h1>

<h4>запись о ВУ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Код_ВУ" />
            
            <div class="form-group">
                <label asp-for="Заявитель" class="control-label"></label>
                <select id="ddlApplicant" asp-for="Код_заявителя" class="form-control" asp-items="@ViewBag.Код_заявителя"></select>
                <span asp-validation-for="Код_заявителя" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Серия_ВУ" class="control-label"></label>
                <input asp-for="Серия_ВУ" class="form-control" />
                <span asp-validation-for="Серия_ВУ" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Номер_ВУ" class="control-label"></label>
                <input asp-for="Номер_ВУ" class="form-control" />
                <span asp-validation-for="Номер_ВУ" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Дата_выдачи" class="control-label"></label>
                <input asp-for="Дата_выдачи" class="form-control" />
                <span asp-validation-for="Дата_выдачи" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Дата_окончания_срока_действия" class="control-label"></label>
                <input asp-for="Дата_окончания_срока_действия" class="form-control" />
                <span asp-validation-for="Дата_окончания_срока_действия" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Виды_статусов_ВУ" class="control-label"></label>
                <select id="ddlStatus" asp-for="Код_статуса_ВУ" class="form-control" asp-items="@ViewBag.Код_статуса_ВУ"></select>
                <span asp-validation-for="Код_статуса_ВУ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#ddlApplicant").select2();
            $("#ddlStatus").select2();
        });
    </script>
}
