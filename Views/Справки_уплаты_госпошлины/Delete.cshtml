@model WebKursovaya.Models.Справки_уплаты_госпошлины

@{
    ViewData["Title"] = "Удаление записи";
}

<h1>Удаление</h1>

<h3>Вы уверены что хотите удалить данную запись?</h3>
<div>
    <h4>Справки уплаты госпошлины</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Заявитель)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ЗаявительФИО)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Дата)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Дата.Дата)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Номер_справки_уплаты_госпошлины" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-dark">Вернуться к списку</a>
    </form>
</div>
