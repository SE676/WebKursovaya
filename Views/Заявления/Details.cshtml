@model WebKursovaya.Models.Заявления

@{
    ViewData["Title"] = "Подробности записи";
}

<h1>Подробности</h1>

<div>
    <h4>записи о заявлении</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Заявитель)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ЗаявительФИО)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Вид_услуги)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Вид_услуги.Название_вида_услуги)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Виды_статусов_заявлений)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Виды_статусов_заявлений.Название_статуса)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Номер_заявления" class="btn btn-primary">Редактировать</a> |
    <a asp-action="Index" class="btn btn-dark">Вернуться к списку</a>
</div>
