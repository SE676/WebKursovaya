@model WebKursovaya.Models.Заявления

@{
    ViewData["Title"] = "Создание записи";
}

<h1>Создать</h1>

<h4>запись о заявлении</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Виды_статусов_заявлений" class="control-label"></label>
                <select id="ddlAppStatus" asp-for="Код_статуса_заявления" class="form-control" asp-items="@ViewBag.Код_статуса_заявления"></select>
            </div>
            <div class="form-group">
                <label asp-for="Заявитель" class="control-label"></label>
                <select id="ddlApplicant" asp-for="Код_заявителя" class="form-control" asp-items="@ViewBag.Код_заявителя"></select>
            </div>
            <div class="form-group">
                <label asp-for="Вид_услуги" class="control-label"></label>
                <select id="ddlTos" asp-for="Код_вида_услуги" class="form-control" asp-items="@ViewBag.Код_вида_услуги"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#ddlAppStatus").select2();
            $("#ddlApplicant").select2();
            $("#ddlTos").select2();
        });
    </script>
}
