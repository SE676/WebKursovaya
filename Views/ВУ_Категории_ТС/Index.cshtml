@model IEnumerable<WebKursovaya.Models.ВУ_Категории_ТС>

@{
    ViewData["Title"] = "ВУ Категории ТС";
}

<h1>ВУ Категории ТС</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать новую запись</a>
</p>
<div class="sptable">
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ВУ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Категория)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ВУсн)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Категория.Наименование_категории_ТС)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Код" class="btn btn-primary">Редактировать</a> |
                   <a asp-action="Details" asp-route-id="@item.Код" class="btn btn-success">Подробности</a> |
                   <a asp-action="Delete" asp-route-id="@item.Код" class="btn btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
