@model WebKursovaya.Models.ВУ_Категории_ТС

@{
    ViewData["Title"] = "Редактирование записи";
}

<h1>Редактировать</h1>

<h4>запись о ВУ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Код" />
            <div class="form-group">
                <label asp-for="ВУ" class="control-label"></label>
                <select asp-for="Код_ВУ" class="form-control" asp-items="ViewBag.Код_ВУ"></select>
                <span asp-validation-for="Код_ВУ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Категория" class="control-label"></label>
                <select asp-for="Код_Категории_ТС" class="form-control" asp-items="ViewBag.Код_Категории_ТС"></select>
                <span asp-validation-for="Код_Категории_ТС" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
