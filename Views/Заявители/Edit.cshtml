@model WebKursovaya.Models.Заявители

@{
    ViewData["Title"] = "Редактирование записи";
}

<h1>Редактировать</h1>

<h4>запись о заявителе</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Код_заявителя" />
            <div class="form-group">
                <label asp-for="Фамилия" class="control-label"></label>
                <input asp-for="Фамилия" class="form-control" />
                <span asp-validation-for="Фамилия" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Имя" class="control-label"></label>
                <input asp-for="Имя" class="form-control" />
                <span asp-validation-for="Имя" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Отчество" class="control-label"></label>
                <input asp-for="Отчество" class="form-control" />
                <span asp-validation-for="Отчество" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Дата_рождения" class="control-label"></label>
                <input asp-for="Дата_рождения" class="form-control" />
                <span asp-validation-for="Дата_рождения" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Пол" class="control-label"></label>
                <select asp-for="Код_пола" class="form-control" asp-items="ViewBag.Код_пола"></select>
                <span asp-validation-for="Код_пола" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
